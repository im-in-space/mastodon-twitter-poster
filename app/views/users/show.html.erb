<%= render 'tabs' %>
<div class="content">
  <h1 class="title is-3"><%= t :synchronization_options %></h1>

  <h2 class="subtitle is-5"><%= t('from_mastodon') %></h2>
  <%= form_for(current_user) do |f|%>
  <div class="field">
    <%= f.check_box :posting_from_mastodon, class: 'switch is-success' %>
    <%= f.label :posting_from_mastodon, t(:masto_synchronization_status), class: 'checkbox' %>
  </div>

  <p><%= link_to(t('.advanced_from_mastodon_options'), advanced_mastodon_user_path) %></p>

  <h2 class="subtitle is-5"><%= t('from_twitter') %></h2>

  <div class="field">
    <%= f.check_box :posting_from_twitter, class: 'switch is-success' %>
    <%= f.label :posting_from_twitter, t(:twitter_synchronization_status), class: 'checkbox' %>
  </div>

  <p><%= link_to(t('.advanced_from_twitter_options'), advanced_twitter_user_path) %></p>

  <%= f.submit class: 'button is-primary' %>
  <% end %>
</div>
